{
  "name": "Block site",
  "description": "Simple, yet flexible site blocker.",
  "version": "1.6",
  "manifest_version": 3,
  "action": {
    "default_popup": "ui/popup/popup.html",
    "default_icon": "ui/popup/popup.png"
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "permissions": ["storage", "activeTab", "tabs", "idle", "alarms"],
    "icons": {
    "128": "ui/popup/popup-128x128.png",
    "48": "ui/popup/popup-128x128.png",
    "16": "ui/popup/popup-128x128.png"
 }
}
