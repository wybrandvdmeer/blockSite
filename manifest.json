{
  "name": "blockSite",
  "description": "Simple, yet flexible site blocker.",
  "version": "1.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "ui/popup/popup.html",
    "default_icon": "ui/popup/popup.png"
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "permissions": ["storage", "activeTab", "tabs", "idle"],

  "host_permissions": ["*://*/*"]
}
